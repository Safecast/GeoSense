<div class="jumbotron">
    <div class="container">
        <% if (!xhr) { %>
        <h1 class="app-title"><a href="<%= config.BASE_URL %>">GeoSense</a></h1>
        <% } %>
        <h2>Create an Account</h2>
        <% if (messages.info) { %>
            <div class="alert alert-info">
            <% for (var i = 0; i < messages.info.length; i++) {%>
                <%= messages.info[i] %><br>
            <% } %>
            </div>
        <% } %>
        <% if (messages.error) { %>
            <div class="alert alert-warning">
            <% for (var i = 0; i < messages.error.length; i++) {%>
                <%= messages.error[i] %><br>
            <% } %>
            </div>
        <% } %>

        <form class="login" action="<%= config.BASE_URL %>signup" method="POST">
            <div class="form-group">
                <label>Email address</label>
                <input class="form-control input-lg" type="text" name="email" value="<% if (typeof email != 'undefined') { %><%= email %><% } %>" />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input class="form-control input-lg" type="password" name="password" value="<% if (typeof password != 'undefined') { %><%= password %><% } %>" placeholder="Minimum 5 characters" />
            </div>
            <div class="form-group">
                <label>Confirm password</label>
                <input class="form-control input-lg" type="password" name="confirmPassword" value="<% if (typeof confirmPassword != 'undefined') { %><%= confirmPassword %><% } %>" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create my Account" class="btn btn-success btn-lg" />
            </div>
            <a class="btn btn-link" href="<%= config.BASE_URL %>login">I already have an account</a>
        </form>
    </div>
</div>
